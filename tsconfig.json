{ 
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./src"
  },
  "include": [ "*.d.ts", "**/*.ts" ],
  "exclude": [ "tsconfig.json", "package.json" ]
}