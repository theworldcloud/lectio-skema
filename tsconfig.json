{ 
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true,
    "outDir": "./src",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
  },
  "include": [ "**/*.ts" ],
  "exclude": [ ]
}